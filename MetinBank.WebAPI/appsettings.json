{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "MetinBankDB": "Server=localhost;Database=MetinBankDB;Uid=root;Pwd=;CharSet=utf8mb4;"
  },
  
  "JwtSettings": {
    "SecretKey": "MetinBank2024SecretKeyForJWTTokenGeneration!@#$%",
    "Issuer": "MetinBankAPI",
    "Audience": "MetinBankClients",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  
  "AppSettings": {
    "AppName": "Metin Bank Web API",
    "AppVersion": "1.0.0",
    "Environment": "Development",
    "EnableSwagger": true,
    "EnableCORS": true,
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "http://localhost:5173"
    ]
  },
  
  "SecuritySettings": {
    "EnableIPWhitelist": false,
    "AllowedIPs": [],
    "EnableRateLimiting": true,
    "RateLimitPerMinute": 60,
    "EnableDetailedErrors": true
  },
  
  "TransactionLimits": {
    "DailyTransferLimit": 20000,
    "MonthlyTransferLimit": 500000,
    "DailyWithdrawalLimit": 50000,
    "EFTFee": 5.00
  },
  
  "EmailSettings": {
    "EnableEmail": false,
    "SmtpServer": "smtp.metinbank.com.tr",
    "SmtpPort": 587,
    "SmtpUsername": "noreply@metinbank.com.tr",
    "SmtpPassword": "",
    "FromEmail": "noreply@metinbank.com.tr",
    "FromName": "Metin Bank"
  },
  
  "SmsSettings": {
    "EnableSMS": false,
    "Provider": "Simulation",
    "ApiKey": "",
    "Sender": "METINBANK"
  }
}

